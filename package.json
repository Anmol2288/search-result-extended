{
  "name": "search-result",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "lint": "eslint --ext js,jsx,ts,tsx .",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json}\"",
    "test": "cd ./react && yarn test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,graphql,gql}": [
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@vtex/prettier-config": "^1.0.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^8.21.0",
    "eslint-config-vtex": "^15.0.1",
    "eslint-config-vtex-react": "^9.0.1",
    "husky": "^4.3.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "typescript": "^3.9.6"
  }
}
