{
  "extends": "vtex-react/io",
  "rules": {
    "react/jsx-filename-extension": 0
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "env": {
    "jest": true
  },
  "overrides": [
    {
      "files": ["*.js", "*.jsx"],
      "parser": "babel-eslint",
      "parserOptions": {
        "sourceType": "module"
      }
    }
  ]
}